{
  "schema_version": "1.0",
  "project": "Riesgo_Operativo",
  "logic": {
    "and_op": "min",
    "or_op": "max",
    "implication": "min",
    "aggregation": "max",
    "defuzz_default": "centroid"
  },
  "variables": [
    {
      "name": "Volatilidad",
      "kind": "input",
      "universe": [0.0, 1.0],
      "terms": [
        {"label": "Baja", "mf": {"type": "tri", "a": 0.0, "b": 0.0, "c": 0.4}},
        {"label": "Media", "mf": {"type": "tri", "a": 0.2, "b": 0.5, "c": 0.8}},
        {"label": "Alta", "mf": {"type": "tri", "a": 0.6, "b": 1.0, "c": 1.0}}
      ]
    },
    {
      "name": "Liquidez",
      "kind": "input",
      "universe": [0.0, 1.0],
      "terms": [
        {"label": "Baja", "mf": {"type": "tri", "a": 0.0, "b": 0.0, "c": 0.4}},
        {"label": "Media", "mf": {"type": "tri", "a": 0.2, "b": 0.5, "c": 0.8}},
        {"label": "Alta", "mf": {"type": "tri", "a": 0.6, "b": 1.0, "c": 1.0}}
      ]
    },
    {
      "name": "Concentración",
      "kind": "input",
      "universe": [0.0, 1.0],
      "terms": [
        {"label": "Baja", "mf": {"type": "tri", "a": 0.0, "b": 0.0, "c": 0.4}},
        {"label": "Media", "mf": {"type": "tri", "a": 0.2, "b": 0.5, "c": 0.8}},
        {"label": "Alta", "mf": {"type": "tri", "a": 0.6, "b": 1.0, "c": 1.0}}
      ]
    },
    {
      "name": "Riesgo_Total",
      "kind": "output",
      "universe": [0.0, 1.0],
      "defuzz": "centroid",
      "terms": [
        {"label": "Muy_Bajo", "mf": {"type": "tri", "a": 0.0, "b": 0.0, "c": 0.2}},
        {"label": "Bajo", "mf": {"type": "tri", "a": 0.1, "b": 0.3, "c": 0.5}},
        {"label": "Medio", "mf": {"type": "tri", "a": 0.3, "b": 0.5, "c": 0.7}},
        {"label": "Alto", "mf": {"type": "tri", "a": 0.5, "b": 0.7, "c": 0.9}},
        {"label": "Muy_Alto", "mf": {"type": "tri", "a": 0.8, "b": 1.0, "c": 1.0}}
      ]
    }
  ],
  "rules": [
    {
      "id": "R1",
      "if": "Volatilidad is Baja AND Liquidez is Alta AND Concentración is Baja",
      "then": [{"variable": "Riesgo_Total", "term": "Muy_Bajo"}],
      "weight": 1.0,
      "note": "Condiciones ideales de bajo riesgo"
    },
    {
      "id": "R2",
      "if": "Volatilidad is Baja AND Liquidez is Alta",
      "then": [{"variable": "Riesgo_Total", "term": "Bajo"}],
      "weight": 0.8,
      "note": "Baja volatilidad y alta liquidez"
    },
    {
      "id": "R3",
      "if": "Volatilidad is Baja AND Concentración is Baja",
      "then": [{"variable": "Riesgo_Total", "term": "Bajo"}],
      "weight": 0.8,
      "note": "Baja volatilidad y baja concentración"
    },
    {
      "id": "R4",
      "if": "Liquidez is Alta AND Concentración is Baja",
      "then": [{"variable": "Riesgo_Total", "term": "Bajo"}],
      "weight": 0.8,
      "note": "Alta liquidez y baja concentración"
    },
    {
      "id": "R5",
      "if": "Volatilidad is Media AND Liquidez is Media",
      "then": [{"variable": "Riesgo_Total", "term": "Medio"}],
      "weight": 1.0,
      "note": "Condiciones promedio"
    },
    {
      "id": "R6",
      "if": "Volatilidad is Media AND Concentración is Media",
      "then": [{"variable": "Riesgo_Total", "term": "Medio"}],
      "weight": 1.0,
      "note": "Volatilidad y concentración medias"
    },
    {
      "id": "R7",
      "if": "Liquidez is Media AND Concentración is Media",
      "then": [{"variable": "Riesgo_Total", "term": "Medio"}],
      "weight": 1.0,
      "note": "Liquidez y concentración medias"
    },
    {
      "id": "R8",
      "if": "Volatilidad is Alta",
      "then": [{"variable": "Riesgo_Total", "term": "Alto"}],
      "weight": 0.9,
      "note": "Alta volatilidad aumenta riesgo significativamente"
    },
    {
      "id": "R9",
      "if": "Liquidez is Baja",
      "then": [{"variable": "Riesgo_Total", "term": "Alto"}],
      "weight": 0.9,
      "note": "Baja liquidez aumenta riesgo significativamente"
    },
    {
      "id": "R10",
      "if": "Concentración is Alta",
      "then": [{"variable": "Riesgo_Total", "term": "Alto"}],
      "weight": 0.9,
      "note": "Alta concentración aumenta riesgo significativamente"
    },
    {
      "id": "R11",
      "if": "Volatilidad is Alta AND Liquidez is Baja",
      "then": [{"variable": "Riesgo_Total", "term": "Muy_Alto"}],
      "weight": 1.0,
      "note": "Combinación crítica de alta volatilidad y baja liquidez"
    },
    {
      "id": "R12",
      "if": "Volatilidad is Alta AND Concentración is Alta",
      "then": [{"variable": "Riesgo_Total", "term": "Muy_Alto"}],
      "weight": 1.0,
      "note": "Combinación crítica de alta volatilidad y alta concentración"
    },
    {
      "id": "R13",
      "if": "Liquidez is Baja AND Concentración is Alta",
      "then": [{"variable": "Riesgo_Total", "term": "Muy_Alto"}],
      "weight": 1.0,
      "note": "Combinación crítica de baja liquidez y alta concentración"
    },
    {
      "id": "R14",
      "if": "Volatilidad is Alta AND Liquidez is Baja AND Concentración is Alta",
      "then": [{"variable": "Riesgo_Total", "term": "Muy_Alto"}],
      "weight": 1.0,
      "note": "Situación de máximo riesgo operativo"
    }
  ]
}
